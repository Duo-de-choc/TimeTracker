{
    "manifest_version": 2,

    "name": "TimeTracker",
    "version": "0.2",
    "description": "Tracking your work time",
    "author": "Patrick ARLT" ,

    "browser_action": {
        "default_icon": "Icons/Chrome_icone_2.jpeg",
        "default_title": "TimeTracker",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": [
            "./js/backgroundTimer.js"
        ],
        "persistent": true
    },

    "permissions": ["storage"]
}
